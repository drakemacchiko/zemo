  // Review type (determines which ratings apply)
  reviewType ReviewType

  // Overall rating (required)
  rating Float // 1-5 stars

  // Category ratings (for vehicle reviews by renters)
  cleanliness   Float? // How clean was the vehicle?
  communication Float? // Host's responsiveness
  convenience   Float? // Pickup/return process
  accuracy      Float? // Did vehicle match listing?

  // Review content
