# Environment Variables for ZEMO Platform
# Copy this file to .env.local and fill in the values

# === REQUIRED ===

# App Configuration
NEXT_PUBLIC_APP_NAME=ZEMO
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL required for production)
DATABASE_URL="postgresql://user:password@localhost:5432/zemo"

# JWT Authentication
JWT_SECRET=generate-with-node-crypto-randomBytes
JWT_REFRESH_SECRET=generate-with-node-crypto-randomBytes

# VAPID Keys for Push Notifications (generate with: node scripts/generate-vapid-keys.js)
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your-public-vapid-key"
VAPID_PRIVATE_KEY="your-private-vapid-key"

# === OPTIONAL (Payment Providers) ===

# Stripe
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# MTN Mobile Money
MTN_MOMO_API_KEY=your-mtn-api-key
MTN_MOMO_USER_ID=your-mtn-user-id
MTN_MOMO_SUBSCRIPTION_KEY=your-subscription-key

# Airtel Money
AIRTEL_MONEY_API_KEY=your-airtel-api-key
AIRTEL_MONEY_CLIENT_ID=your-client-id
AIRTEL_MONEY_CLIENT_SECRET=your-client-secret

# Zamtel Kwacha
ZAMTEL_KWACHA_API_KEY=your-zamtel-api-key
ZAMTEL_KWACHA_MERCHANT_ID=your-merchant-id

# DPO Payment Gateway
DPO_API_KEY=your-dpo-api-key
DPO_COMPANY_TOKEN=your-company-token

# === LEGACY (Future Phases) ===

# Authentication (for future phases)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# SMS/OTP Provider (for future phases)  
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Supabase Storage (for file uploads)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_UPLOAD_DIR=./public/uploads

# Push Notifications (Phase 11)
# Generate VAPID keys using: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:support@zemo.zm

# Analytics & Monitoring

# Payment Providers (for future phases)
# Mobile Money
AIRTEL_MONEY_API_KEY=
MTN_MOMO_API_KEY=
ZAMTEL_KWACHA_API_KEY=

# Card Payments
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
DPO_COMPANY_TOKEN=

# Webhook Secrets (Production)
AIRTEL_MONEY_WEBHOOK_SECRET=
MTN_MOMO_WEBHOOK_SECRET=
STRIPE_WEBHOOK_SECRET=
DPO_WEBHOOK_SECRET=

# Maps & Location (Phase 3 - REQUIRED for location search)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Cron Jobs (Phase 3 - Late Return Detection)
CRON_SECRET=generate-random-secret-for-cron-authentication

# Email (for future phases)
RESEND_API_KEY=

# Monitoring (for future phases)
SENTRY_DSN=